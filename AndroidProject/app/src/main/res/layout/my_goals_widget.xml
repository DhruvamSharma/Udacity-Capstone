<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/widget_app_icon_iv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="@dimen/element_margin"
            android:src="@drawable/app_logo"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/widget_my_app_name_tv"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:text="@string/app_name"
            android:layout_gravity="center"
            android:textColor="@color/colorAccent"
            android:padding="@dimen/element_margin"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <TextView
        android:id="@+id/widget_list_name_tv"
        android:layout_width="wrap_content"
        android:textColor="@color/colorAccent"
        android:padding="@dimen/element_margin"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:layout_height="wrap_content" />


    <!--<ImageView-->
        <!--android:id="@+id/widget_app_score_iv"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_gravity="center"-->
        <!--android:src="@drawable/score_points"-->
        <!--android:layout_height="wrap_content"/>-->

    <ListView
        android:id="@+id/widget_list_lv"
        android:background="@color/browser_actions_bg_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>